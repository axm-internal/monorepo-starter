{
    "$schema": "https://www.schemastore.org/package.json",
    "name": "repo-starter",
    "description": "place-holder-description",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "packageManager": "bun@1.3.0",
    "engines": {
        "node": ">=22",
        "bun": ">=1.3"
    },
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "prepare": "lefthook install",
        "dev": "turbo run dev",
        "check-types": "turbo run check-types",
        "test": "turbo run test",
        "test:coverage": "turbo run test:coverage",
        "lint": "turbo run lint",
        "lint:root": "biome check --write --config-path=biome.root.json",
        "lint:fix": "bun lint:root && turbo run lint:fix",
        "validate": "turbo run validate",
        "clean": "./scripts/clean"
    },
    "dependencies": {},
    "peerDependencies": {},
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@types/bun": "^1.3.6",
        "lefthook": "^2.0.15",
        "turbo": "^2.7.4",
        "typescript": "^5.9.3"
    }
}
